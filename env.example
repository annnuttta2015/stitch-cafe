# Токен бота от @BotFather
BOT_TOKEN=your_bot_token_here

# ID игрового чата, где работает бот
CHAT_ID=your_chat_id_here

# ID админов через запятую (например: 123456789,987654321)
ADMIN_ID=your_telegram_id_here

# Токен сообщества ВКонтакте
VK_TOKEN=your_vk_group_token_here

# ID сообщества ВКонтакте (без минуса), опционально
VK_GROUP_ID=your_vk_group_id_here

# (опционально) peer_id единственной разрешённой беседы во ВК.
# Если заполнено, VK-бот будет игнорировать все остальные чаты и личку.
VK_ALLOWED_PEER_ID=your_vk_allowed_peer_id_here
